<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="radio"
            type="com.mowakib.radio.model.Radio" />

        <variable
            name="radioCallback"
            type="com.mowakib.radio.adapter.RadioClick" />
    </data>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="?actionBarSize"
        android:id="@+id/radio_fav_logo"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="@dimen/simple_card_margin_bottom"
        android:layout_marginEnd="4dp"
        android:onClick="@{() -> radioCallback.onClick(radio)}"
        android:scaleType="centerCrop"
        app:glideSrc="@{radio.logo}"
        app:roundPercent="1"
        tools:srcCompat="@tools:sample/avatars" />

</layout>