<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="300dp"
                android:height="?actionBarSize" />
            <gradient
                android:endColor="@color/teal_600"
                android:startColor="@color/blue_600" />
            <corners android:radius="36dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <size
                android:width="280dp"
                android:height="20dp" />
            <solid android:color="@color/grey_900" />
            <corners android:radius="36dp" />
        </shape>
    </item>
</layer-list>